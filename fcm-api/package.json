{
  "name": "fcm-api",
  "private": true,
  "type": "module",
  "exports": "./index.js",
  "imports": {
    "#enums/*": "./enums/*",
    "#guards/*": "./guards/*",
    "#middlewares/*": "./middlewares/*",
    "#models/*": "./models/*",
    "#routes/*": "./routes/*",
    "#services/*": "./services/*",
    "#types/*": "./types/*",
    "#utils/*": "./utils/*",
    "#src/*": "./*"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "build-win": "npx tsc && tsx build.ts",
    "build-full": "rm -rf dist && NODE_ENV=production npx tsc && tsx build.ts && cp .env dist/.env && cp package-lock.json dist/package-lock.json",
    "build-docker": "NODE_ENV=production npx tsc && tsx build.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "format": "prettier --write .",
    "lint": "eslint src/**",
    "lint-fix": "eslint --fix src/**/*.{js,jsx,ts,tsx,json,css,scss,md}"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16",
    "@types/on-finished": "^2.3.1",
    "@types/on-headers": "^1.0.0",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "latest",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.5"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^11.10.1",
    "helmet": "^7.0.0",
    "on-finished": "^2.4.1",
    "on-headers": "^1.0.2",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  }
}
